<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= form.text_field :full_name, class: 'form-control', placeholder: "Enter your name..." %>
    <%= form.label :full_name %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :email, class: 'form-control', placeholder: "name@example.com" %>
    <%= form.label :email, 'Email address' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :phone, class: 'form-control', placeholder: "(123) 456-7890" %>
    <%= form.label :phone %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_area :body, class: 'form-control', placeholder: "Enter your message here...", style: 'height: 10rem' %>
    <%= form.label :body, 'Message' %>
  </div>

  <div class="d-grid">
    <%= form.submit 'Submit', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

